<h1>Sign in Page</h1>

<%= form_with model:@user, url:sign_in_path do |form|%>
<div class='mb-3'>
    <%= form.label :email%>
    <%= form.text_field :email, class:"form-control", placeholder:'steve@brandeis.edu'%>
</div>
<br>
<div class='mb-3'>
    <%= form.label :password%>
    <%= form.password_field :password, class:"form-control", placeholder:'password'%>
</div>
<br>

<div class='mb-3'>
<%= form.submit 'Sign in'%>
</div>

<% end %>